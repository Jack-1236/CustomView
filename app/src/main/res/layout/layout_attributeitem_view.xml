<?xml version="1.0" encoding="utf-8"?><layout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools">    <data>        <variable            name="attributeName"            type="com.android.data.AttributeObservable" />        <variable            name="attributeValue"            type="com.android.data.AttributeObservable" />    </data>    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <TextView            android:id="@+id/attributeItem_text"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:background="@{attributeName.background}"            android:text="@{attributeName.text}"            android:textColor="@{attributeName.textColor}"            android:textSize="@{attributeName.textSize}"            android:textStyle="@{attributeName.textStyle}"            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintTop_toTopOf="parent" />        <TextView            android:id="@+id/attributeItem_value"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:background="@{attributeValue.background}"            android:text="@{attributeValue.text}"            android:textColor="@{attributeValue.textColor}"            android:textSize="@{attributeValue.textSize}"            android:textStyle="@{attributeValue.textStyle}"            app:layout_constraintLeft_toRightOf="@+id/attributeItem_text"            app:layout_constraintTop_toTopOf="parent" />    </androidx.constraintlayout.widget.ConstraintLayout></layout>